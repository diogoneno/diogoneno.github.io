---
# Only the main Sass file needs front matter (the dashes are enough)
---

$theme-colors: (
  "coolblack": #090a0b,
  "spacegrey": #353535,
  "snowwhite": #ffffff
);

$brand-colors: (
  "orangered": #ff5100,
  "greatgold": #f2cb05,
  "greenblue": #389092
);

// Theme variables - using simple quotes and default filter
$theme-name: '{{ site.theme_color | default: "snowwhite" }}';
$brand-name: '{{ site.brand_color | default: "orangered" }}';

$theme-color: map-get($theme-colors, "snowwhite");
$brand-color: map-get($brand-colors, "orangered");

// Theme color logic - simplified
@if map-has-key($theme-colors, str-slice($theme-name, 2, -2)) {
  $theme-color: map-get($theme-colors, str-slice($theme-name, 2, -2));
} @else {
  $theme-color: unquote($theme-name);
}

// Brand color logic - simplified
@if map-has-key($brand-colors, str-slice($brand-name, 2, -2)) {
  $brand-color: map-get($brand-colors, str-slice($brand-name, 2, -2));
} @else {
  $brand-color: unquote($brand-name);
}

$content-width: '{{ site.content_width | default: "920px" }}';

// Import the main framework
@import "yat";